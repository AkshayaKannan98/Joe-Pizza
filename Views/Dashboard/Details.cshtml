@model Joe_s_Pizza.Models.PizzaModel

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<h1>Details</h1>

<div>
    <h4>PizzaModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="visibility:hidden">
            @Html.DisplayNameFor(model => model.Pno)
        </dt>
        <dd class="col-sm-10" style="visibility:hidden">
            @Html.DisplayFor(model => model.Pno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Html.DisplayFor(model => model.Image)" width="100px" height="100px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PizzaName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PizzaName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            <b>Qty</b>
        </dt>
        <dd class="col-sm-10">
            <select id="Quantity" name="Quantity">

                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="4">5</option>
                <option value="4">6</option>
                <option value="4">7</option>
                <option value="4">8</option>
                <option value="4">9</option>
                <option value="4">10</option>
            </select>
        </dd>
    </dl>
</div>
<div>

    <a href="@Url.Action("PlaceOrder","PlaceOrder",  new { id = Model.Pno, val = "Add" })" class="=btn btn-success btn-lg" style="text-decoration:none">
        <i class="fa fa-shopping-cart"></i>
        <span>
            Add To Cart
        </span>
        <i class="fa fa-angle-double-right"></i>
    </a>
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-success btn-lg" style="margin-left:60px">
        <span class="fa fa-cart-plus">Continue Shopping</span>
    </a>
    <br />

    <br />

